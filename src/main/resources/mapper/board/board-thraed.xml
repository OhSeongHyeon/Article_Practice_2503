<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
${seq}
${writerId}
${title}
${content}
${viewCnt}
${isNotice}
${regDate}
${modifiedDate}
-->
<mapper namespace = "nproj.article.board.mapper.BoardThreadMapper">
    <select id="getBoardThreadList" resultType="nproj.article.board.model.BoardThread">
        SELECT * FROM BOARD_THREAD
    </select>
    <insert id="addBoardThread" parameterType="nproj.article.board.model.BoardThread">
        INSERT INTO BOARD_THREAD (SEQ, WRITER_ID, TITLE, CONTENT, VIEW_CNT, IS_NOTICE, REG_DATE, MODIFIED_DATE)
        VALUES (
            BOARD_THREAD_SEQ.NEXTVAL,
            #{writerId},
            #{title},
            #{content},
            0,
            0,
            SYSDATE,
            NULL
       )
    </insert>
</mapper>